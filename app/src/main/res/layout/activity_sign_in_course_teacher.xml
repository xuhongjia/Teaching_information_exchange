<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/bg_gray"
    >
    <include layout="@layout/inc_head_bar" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp">
            <TextView
                android:layout_width="90dp"
                android:layout_height="40dp"
                android:text="@string/course_name"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:gravity="center_vertical"/>
            <TextView
                android:id="@+id/course_title"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:textSize="18sp"
                android:padding="1dp"
                android:layout_alignParentRight="true"
                android:gravity="center"
                android:text="xxxx"
                />
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/content_title"
                android:layout_width="90dp"
                android:layout_marginTop="5dp"
                android:layout_height="match_parent"
                android:text="@string/course_content"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:gravity="left|top"
                />
            <TextView
                android:id="@+id/content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="1dp"
                android:textSize="18sp"
                android:gravity="right|top"
                android:text="xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx"
                android:ellipsize="end"
                android:singleLine="false"
                />

        </LinearLayout>
        <!-- 更多和箭头 -->
        <RelativeLayout
            android:id="@+id/show_more"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:clickable="true"
            >
            <TextView
                android:id="@+id/show_more_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:textSize="13sp"
                android:textColor="#999"
                android:drawablePadding="5dp"
                android:drawableRight="@mipmap/detail_down"
                android:text="更多" />
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/validation_add_time"
                android:layout_width="90dp"
                android:layout_height="match_parent"
                android:text="添加时间："
                android:textSize="18sp"
                android:textColor="@color/black"
                android:gravity="left|top"
                />
            <TextView
                android:id="@+id/time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="1dp"
                android:textSize="18sp"
                android:gravity="right|top"
                android:text="x"
                android:ellipsize="end"
                android:singleLine="false"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/validation_state_change"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:orientation="horizontal"
            android:clickable="true"
            android:background="@drawable/my_info_item_selector"
            android:layout_marginBottom="5dp"
            >
            <TextView
                android:id="@+id/validation_state"
                android:layout_width="90dp"

                android:layout_height="match_parent"
                android:text="状态："
                android:textSize="18sp"
                android:textColor="@color/black"
                android:gravity="left|top"
                />
            <TextView
                android:id="@+id/state"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="1dp"
                android:textSize="18sp"
                android:gravity="right|top"
                android:text="x"
                android:ellipsize="end"
                android:singleLine="false"
                android:drawableRight="@mipmap/youjiantou"
                android:drawablePadding="3dp"
                />
        </LinearLayout>
    </LinearLayout>
    <RelativeLayout
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_marginTop="5dp"
        android:padding="5dp"
        android:clickable="true"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:layout_alignParentLeft="true"
            android:gravity="center_vertical"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:layout_toLeftOf="@+id/students_sign_in_all"
            android:text="签到的学生" />
        <TextView
            android:id="@+id/students_sign_in_all"
            android:layout_width="wrap_content"
            android:layout_height="38dp"
            android:layout_alignParentRight="true"
            android:gravity="center_vertical"
            android:textSize="16sp"
            android:drawablePadding="5dp"
            android:text="1/2"/>
    </RelativeLayout>
    <ListView
        android:id="@+id/students"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="@null"
        >
    </ListView>
</LinearLayout>
