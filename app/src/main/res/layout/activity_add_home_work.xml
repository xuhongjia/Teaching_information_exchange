<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_gray"
    >
    <include layout="@layout/inc_head_bar" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp">
            <TextView
                android:layout_width="90dp"
                android:layout_height="40dp"
                android:text="@string/course_name"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:gravity="center_vertical"/>
            <TextView
                android:id="@+id/course_title"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:textSize="18sp"
                android:padding="1dp"
                android:layout_alignParentRight="true"
                android:gravity="center"
                android:text="xxxx"
                />
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/content_title"
                android:layout_width="90dp"
                android:layout_marginTop="5dp"
                android:layout_height="match_parent"
                android:text="@string/course_content"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:gravity="left|top"
                />
            <TextView
                android:id="@+id/content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="1dp"
                android:textSize="18sp"
                android:gravity="right|top"
                android:text="xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx"
                android:ellipsize="end"
                android:singleLine="false"
                />

        </LinearLayout>
        <!-- 更多和箭头 -->
        <RelativeLayout
            android:id="@+id/show_more"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:clickable="true"
            >
            <TextView
                android:id="@+id/show_more_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:textSize="13sp"
                android:textColor="#999"
                android:drawablePadding="5dp"
                android:drawableRight="@mipmap/detail_down"
                android:text="更多" />
        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="作业内容："
            android:gravity="center_vertical"
            android:textColor="@color/black"
            android:padding="5dp"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <EditText
                android:id="@+id/home_work_content"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="9"
                android:scrollbars="vertical"
                android:inputType="textMultiLine"
                android:gravity="start"
                android:text="xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx"
                android:padding="8dp"
                android:paddingLeft="8dp"
                android:lineSpacingExtra="8dp"
                android:paddingRight="8dp"
                android:textSize="16sp"
                android:background="@null"
                />
            <Button
                android:id="@+id/add"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/button_background_selector"
                android:layout_margin="5dp"
                android:text="提交"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
